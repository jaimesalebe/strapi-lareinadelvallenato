{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext"
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "subtitle": {
      "type": "string",
      "required": true
    },
    "atemporal": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "customField",
      "required": true,
      "options": [
        "Vallenato",
        "Cantante A",
        "Cantante B",
        "Acordeon"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "title"
    },
    "oembed": {
      "type": "customField",
      "customField": "plugin::oembed.oembed"
    },
    "section": {
      "type": "enumeration",
      "enum": [
        "las-notas-sueltas",
        "el-lleva-y-trae",
        "lo-que-suena",
        "noticias"
      ],
      "required": true
    }
  }
}
